{
  "name": "@everglot/landingpage",
  "description": "everglot.com landing page",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "run-p watch:*",
    "watch:css": "postcss src/assets/global.pcss -o static/global.css -w",
    "watch:dev": "sapper dev",
    "build": "run-s build:css build:css:fonts build:sapper",
    "build:css": "NODE_ENV=production postcss src/assets/global.pcss -o static/global.css",
    "build:css:fonts": "run-p build:css:fonts:poppins",
    "build:css:fonts:poppins": "NODE_ENV=production postcss src/assets/fonts/poppins.pcss -o static/fonts/poppins.css",
    "build:sapper": "sapper build --legacy",
    "build:export": "sapper export --legacy",
    "export": "run-s build:css build:export",
    "migrate": "node-pg-migrate -m src/migrations",
    "start": "node __sapper__/build",
    "serve": "serve ___sapper__/export",
    "validate": "svelte-check --ignore src/node_modules/@sapper --compiler-warnings 'module-script-reactive-declaration:ignore'"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "node-pg-migrate": "^5.9.0",
    "pg": "^8.7.1",
    "sirv": "^1.0.19"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/runtime": "^7.16.3",
    "@nubolab-ffwd/svelte-fluent": "^0.4.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-url": "^6.1.0",
    "@tailwindcss/forms": "^0.3.4",
    "@tsconfig/svelte": "^2.0.1",
    "@types/compression": "^1.7.2",
    "@types/node": "^16.11.12",
    "@types/polka": "^0.5.3",
    "@types/uuid": "^8.3.3",
    "autoprefixer": "^10.4.0",
    "cssnano": "^5.0.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "postcss-load-config": "^3.1.0",
    "postcss-preset-env": "^7.0.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.0",
    "rollup": "^2.60.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.29.3",
    "svelte": "^3.44.2",
    "svelte-check": "^2.2.10",
    "svelte-feather-icons": "^3.5.0",
    "svelte-preprocess": "^4.9.8",
    "tailwindcss": "^2.2.19",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "uuid": "^8.3.2"
  }
}
